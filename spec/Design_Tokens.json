{
  "meta": {
    "name": "Tarot App – Parchment Minimal",
    "version": "1.0",
    "notes": "Warm parchment UI designed to let Rider–Waite cards remain visually dominant. Minimal, editorial, premium."
  },

  "colors": {
    "base": {
      "app_background": "#F3EEE4",
      "paper_secondary": "#E9E1D4",
      "surface": "#F6F1E8"
    },

    "text": {
      "primary": "#2F2A24",
      "secondary": "#6B6157",
      "muted": "#8A7E72"
    },

    "borders": {
      "hairline": "#D8CFC1"
    },

    "accent": {
      "brass": "#B9A27A",
      "brass_dark": "#8E7A56"
    },

    "shadow": {
      "warm_soft": "rgba(47, 42, 36, 0.10)",
      "warm_medium": "rgba(47, 42, 36, 0.12)",
      "warm_strong": "rgba(47, 42, 36, 0.18)"
    }
  },

  "typography": {
    "font_families": {
      "heading": "'Fraunces', serif",
      "body": "'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif"
    },

    "sizes": {
      "title": "18px",
      "body": "15px",
      "small": "13px"
    },

    "weights": {
      "heading": 600,
      "body": 400,
      "body_medium": 500
    },

    "letter_spacing": {
      "heading": "0.08em",
      "body": "0em"
    }
  },

  "radii": {
    "chat_bubble": "18px",
    "input": "16px",
    "icon_button": "14px",
    "card": "8px"
  },

  "elevation": {
    "card": "0 10px 24px rgba(47, 42, 36, 0.12), 0 2px 6px rgba(47, 42, 36, 0.08)",
    "chat_panel": "0 -10px 30px rgba(47, 42, 36, 0.12)",
    "bubble": "0 10px 18px rgba(47, 42, 36, 0.10)"
  },

  "components": {
    "header": {
      "background": "#F3EEE4",
      "divider": "#D8CFC1",
      "text": "#2F2A24",
      "icon": "#8A7E72"
    },

    "spread_stage": {
      "background": "#F3EEE4",
      "inner_surface": "rgba(246, 241, 232, 0.6)",
      "border": "#D8CFC1"
    },

    "chat": {
      "panel_background": "#E9E1D4",
      "user_bubble": "#F6F1E8",
      "assistant_bubble": "#F3EEE4",
      "text": "#2F2A24"
    },

    "input": {
      "background": "#F6F1E8",
      "border": "#D8CFC1",
      "placeholder": "#8A7E72",
      "text": "#2F2A24"
    },

    "button": {
      "default_background": "#EFE7DA",
      "default_border": "#D8CFC1",
      "default_icon": "#6B6157",
      "active_background": "#B9A27A",
      "active_icon": "#2F2A24"
    }
  },

  "textures": {
    "spread_stage": {
      "type": "pressed_paper",
      "description": "Subtle parchment texture with fine grain and soft emboss variation. Not noisy, barely perceptible.",
      "grain_opacity": 0.04,
      "emboss_opacity": 0.03
    }
  }
}
